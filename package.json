{
  "name": "weatherai",
  "version": "0.0.1",
  "description": "Generates AI images based on your location, weather conditions and time of day",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "package:lint": "npx npm-package-json-lint .",
    "start": "node dist/app.js",
    "start:watch": "nodemon dist/app.js"
  },
  "dependencies": {
    "axios": "1.7.7",
    "body-parser": "1.20.3",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "openai": "3.3.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.17",
    "@types/node": "22.9.0",
    "concurrently": "9.1.0",
    "eslint-config-plus-prettier": "3.0.0",
    "nodemon": "3.1.7",
    "typescript": "5.6.3"
  },
  "prettier": "eslint-config-plus-prettier/.prettierrc.json"
}
